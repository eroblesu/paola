---
interface Props {
	title: string;
	description: string;
	icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="proceso-card flex items-center gap-4">
	<div class="icon flex-shrink-0">
		{
			icon ? (
				<img title={title} width="48px" height="48px" src={icon} alt={title} class="h-12 w-12 rounded-lg object-cover" loading="lazy" />
			) : null
		}
	</div>
	<div class="content">
		<h3 class="m-0 mb-2 text-lg">{title}</h3>
		<!-- <p class="m-0 text-sm text-gray-600">{description}</p> -->
	</div>
</div>
